@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category List";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-info">
                    <i class="bi bi-plus-circle"></i> &nbsp; New Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped mt-3" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th class="align-middle">Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categories in Model)
                {
                    <tr>
                        <td width="50%">@categories.Name</td>
                        <td width="50%">@categories.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@categories.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@categories.Id" class="btn btn-warning mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container p-3">
</div>